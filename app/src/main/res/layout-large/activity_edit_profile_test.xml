<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    >


    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbackgroundtest"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/user_register_border"
            android:orientation="horizontal"

            >


            <EditText
                android:id="@+id/edit_reg_fname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="false"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor"
                android:textSize="20sp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border">


            <EditText
                android:id="@+id/edit_reg_lname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="false"
                android:hint="Last Name"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textSize="20sp"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border"


            >

            <AutoCompleteTextView
                android:id="@+id/autocompletecountry_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="false"
                android:hint="Nationality"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="1"
                android:maxLines="1"
                android:textSize="20sp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border">

            <AutoCompleteTextView
                android:id="@+id/autocomplete_lang_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borders_edit_txt_user_register"
                android:cursorVisible="false"
                android:hint="Preferred Language"
                android:lines="1"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/primaryColor" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryColor"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Date Of Birth"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/date_of_birth_txt"

                />

            <RelativeLayout
                android:id="@+id/datepicker_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/date_of_birth_txt"
                android:layout_marginTop="5dp"
                android:background="@drawable/user_register_border">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/calicon"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


                <TextView
                    android:id="@+id/txt_dayOfWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:textColor="@color/primaryColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/Register_comma_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/txt_dayOfWeek"
                    android:layout_toRightOf="@+id/txt_dayOfWeek"
                    android:text=","
                    android:textColor="@color/primaryColor"
                    android:textSize="22sp"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/txt_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/txt_dayOfWeek"
                    android:layout_toRightOf="@+id/txt_dayOfWeek"
                    android:padding="3dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_beforeCal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:padding="3dp"
                    android:text="Click to select\nDate of Birth"
                    android:textColor="@color/primaryColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border">


            <TextView
                android:id="@+id/malefemale_txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/malefemale_edit"
                android:layout_toStartOf="@+id/malefemale_edit"
                android:text="Male"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/primaryColor"
                android:textSize="22sp"
                />
            <TextView
                android:id="@+id/femalemale_txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/malefemale_edit"
                android:layout_toEndOf="@+id/malefemale_edit"
                android:text="Female"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:textColor="@color/gray_before_login"
                android:textSize="22sp"
                />




            <ImageView
                android:id="@+id/malefemale_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/slidemale" />

            <ImageView
                android:id="@+id/femalemale_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/slidefemale"
                android:visibility="invisible"

                />

        </RelativeLayout>



        <Button
            android:id="@+id/btnUploadPhotoEdt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_register_border_button"
            android:text="Upload your Photo"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="22sp"
            />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:id="@+id/btn_Edit_id"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:textAllCaps="false"
                android:layout_marginEnd="40dp"
                android:textSize="22sp"
                android:background="@drawable/user_register_border_button"
                />

            <Button
                android:id="@+id/btn_Edit_Cancel"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/btn_Edit_id"
                android:layout_toEndOf="@+id/btn_Edit_id"
                android:textAllCaps="false"
                android:background="@drawable/user_register_border_button"
                />


        </RelativeLayout>


    </LinearLayout>


</ScrollView>

</LinearLayout>
