<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context="com.example.nezar.materialtest.MainNavigationDrawerFragment.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/container_drawer_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/primaryColor">


        <com.pkmmte.view.CircularImageView
            android:id="@+id/navy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:src="@drawable/defaultdriver" />


    </LinearLayout>


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/drawer_list"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/container_drawer_image">-->


    <!--</android.support.v7.widget.RecyclerView>-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_drawer_image"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >

            <RelativeLayout
                android:id="@+id/navy_homePage"
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <ImageView
                    android:id="@+id/menuicon1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/menuicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/menuicon1"
                    android:layout_toRightOf="@+id/menuicon1"
                    android:text="Home Page"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FFFFFF"

                    />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"

                />


            <RelativeLayout
                android:id="@+id/navy_TopRides"
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <ImageView
                    android:id="@+id/menuicon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/menuicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/menuicon2"
                    android:layout_toRightOf="@+id/menuicon2"
                    android:text="Most Rides"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"

                />

            <RelativeLayout
                android:id="@+id/navy_BestDrivers"
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <ImageView
                    android:id="@+id/menuicon3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/menuicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/menuicon3"
                    android:layout_toRightOf="@+id/menuicon3"
                    android:text="Best Drivers"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"

                />

            <RelativeLayout
                android:id="@+id/navy_SearchOptions"
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <ImageView
                    android:id="@+id/menuicon4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/menuicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/menuicon4"
                    android:layout_toRightOf="@+id/menuicon4"
                    android:text="Search Options"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"

                />

            <RelativeLayout
                android:id="@+id/navy_MyProfile"
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <ImageView
                    android:id="@+id/menuicon5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/menuicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/menuicon5"
                    android:layout_toRightOf="@+id/menuicon5"
                    android:text="Notifications"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"

                />

            <RelativeLayout
                android:id="@+id/navy_Logout"
                android:layout_width="match_parent"
                android:layout_height="70dp">


                <ImageView
                    android:id="@+id/menuicon6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/menuicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/menuicon6"
                    android:layout_toRightOf="@+id/menuicon6"
                    android:text="Logout"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </LinearLayout>


        </ScrollView>


    </RelativeLayout>
</RelativeLayout>